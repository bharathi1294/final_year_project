<% include header %>
<title>Reset Password</title>
</head>
<body>
    <div class="content">
        <div class="container">
            <div class="col-md-6 contents">
                <div class="row justify-content-center">
                  <div class="col-md-8">
                    <div class="mb-4">
                        <h3>Enter <strong>Password</strong></h3>
                      </div>
            <% include ./partials/messages %>
            <form action="/users/reset" method="POST">
                <input type="hidden" name="token" value="<%= user.resetPasswordToken%>">
                <div class="form-group last mb-4">
                    <label for="password">Password</label>
                    <input
                      type="password"
                      id="password"
                      name="password"
                      class="form-control"
                    />
                  </div>
                  <div class="form-group last mb-4">
                    <label for="password2">Confirm Password</label>
                    <input
                      type="password"
                      id="password2"
                      name="password2"
                      class="form-control"
                    />
                  </div>
                <input type="submit" value="Update Password" class="btn text-white btn-block btn-primary">
            </form>
        </div>
        </div>
        </div>
        </div>
        
    </div>

<% include footer %> 